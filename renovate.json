{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Prague",
  "rebaseWhen": "never",
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "labels": [
    "deps"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "actions"
    },
    {
      "matchManagers": [
        "docker"
      ],
      "groupName": "docker"
    },
    {
      "matchManagers": [
        "npm"
      ],
      "minimumReleaseAge": "3 days"
    }
  ]
}